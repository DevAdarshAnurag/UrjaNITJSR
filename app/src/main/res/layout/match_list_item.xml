<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/match_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:padding="4dp"
            android:text="EVENT NAME"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=" + "
            android:visibility="gone"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/match_teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_name"
            android:layout_centerHorizontal="true"
            android:hint="Team1 vs Team2"
            android:paddingTop="16dp"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/match_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_teams"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_score_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_score_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/match_sets1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_score"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_sets_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_sets_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_sets2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets1"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_sets_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_sets_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_sets3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets2"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_sets_31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_sets_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_sets4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets3"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_sets_41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_sets_42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_sets5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets4"
            android:layout_centerHorizontal="true">

            <TextView

                android:id="@+id/match_sets_51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:textColor="@color/colorPrimary"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_sets_52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="124dp"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/match_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets5"
            android:layout_alignParentStart="true"
            android:hint="roundName"
            android:textColor="@color/colorPrimary"
            android:padding="4dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/match_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_sets5"
            android:layout_alignParentEnd="true"
            android:hint="result"
            android:textColor="@color/colorPrimary"
            android:padding="4dp"
            android:textAlignment="textEnd"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>